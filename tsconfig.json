{
  "compilerOptions": {
    "declaration": true,
    "lib": [
      "ES2022",
      "dom",
      "dom.iterable"
    ],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "removeComments": false,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022",
    "outDir": "./dist",
  },
  "suppressImplicitAnyIndexErrors": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}